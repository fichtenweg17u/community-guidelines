% Define a horizontal rule for a signature etc.
\newcommand{\SignatureRule}[1]{
    \par\vspace*{\dimexpr-\parskip-\baselineskip+.1em}
    \noindent\rule{#1}{0.2mm}
    \par\vspace*{\dimexpr-\parskip-.5\baselineskip}
}

